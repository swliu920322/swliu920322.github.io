    <!--    <a href="#" target="_blank"> Certification Name (with link)</a>-->
    <!--  </li>-->
    <!--  <li>-->
    <!--    <a href="#" target="_blank"> Certification Name (with link)</a>-->
    <!--  </li>-->
    <!--</ul>-->

    <div class="mb-5">
      <div class="text-3xl w-full font-bold">Skills</div>
    </div>

    <ul class="flex flex-col mx-6">
      <li>
        Vue
      </li>
      <li class="flex flex-col">
        <span>React</span>
        <ol>
          <li class="ml-4">
            <a class="underline font-black" target="_blank" href="https://next-github-pied.vercel.app/">基于nextjs App
              架构的github mock(已部署)</a>
          </li>
        </ol>
      </li>
      <li>Angular</li>
      <li>Astro</li>
      <li>Uniapp</li>
    </ul>
  </div>
</BaseLayout>
